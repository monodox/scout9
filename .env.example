# App Configuration
APP_NAME=Scout9
APP_VERSION=0.1.0
DEBUG=True

# Database
# Prefer Supabase Postgres (Project Settings -> Database -> Connection string)
# Use the service role connection string and include sslmode=require.
SUPABASE_DB_URL=postgresql://user:password@db.supabase.co:5432/postgres?sslmode=require
# Fallback local database for development
DATABASE_URL=sqlite:///./scout9.db

# GRID API
GRID_API_KEY=your_grid_api_key_here
GRID_API_URL=https://api-op.grid.gg/central-data/graphql

# Cache
CACHE_ENABLED=True
CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
